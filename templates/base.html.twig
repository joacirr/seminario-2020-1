<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {{ encore_entry_link_tags('global') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <header>
        <div class="collapse bg-dark" id="navbarHeader">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 col-md-7 py-4">
                        <h4 class="text-white">{{ 'about'|trans }}</h4>
                        <p class="text-muted">{{ 'message'|trans }}</p>
                    </div>
                    <div class="col-sm-4 offset-md-1 py-4">
                        <h4 class="text-white">{{ 'contacts.instagram'|trans }}</h4>
                        <ul class="list-unstyled">
                            <li><a href="#" class="text-white" target="_blank">@x</a></li>
                            <li><a href="#" class="text-white" target="_blank">@y</a></li>
                            <li><a href="#" class="text-white" target="_blank">@z</a></li>
                            <li><a href="https://www.instagram.com/joacirraimondi" target="_blank" class="text-white">@joacirraimondi</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container d-flex justify-content-between">
                <div class="navbar-brand d-flex align-items-center"></div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </header>
    {% block body %}{% endblock %}
    <hr class="divider">
    <footer class="container">
        <p class="float-right"><a href="#">{{ 'back.top'|trans }}</a></p>
        <p>© 2018-2020 Zicas Solutions, Inc. · <a href="#">{{ 'privacy'|trans }}</a> · <a href="#">{{ 'terms'|trans }}</a></p>
    </footer>

    <div class="modal fade confirmRemove" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">{{ 'confirm.title'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ 'delete.confirm' }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger btn-confirm-remove" data-dismiss="modal">{{ 'remove'|trans }}</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">{{ 'close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    {{ encore_entry_script_tags('global') }}
    {% block javascripts %}{% endblock %}
    </body>
</html>
